<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lesson Under Construction - Technical Christianity</title>
    <meta name="robots" content="noindex, nofollow">
    
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
            color: white;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .container {
            text-align: center;
            max-width: 600px;
            width: 100%;
        }

        .robot-emoji {
            font-size: 8rem;
            margin-bottom: 1rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        h1 {
            font-size: 2.5rem;
            color: #ff8c42;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .status-text {
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
            color: rgba(255, 255, 255, 0.95);
        }

        .robot-gibberish {
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 2rem;
            letter-spacing: 2px;
        }

        .chat-prompt {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            border-radius: 12px;
            padding: 1.5rem;
            margin: 2rem 0;
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .back-btn {
            display: inline-block;
            background: #ff8c42;
            color: white;
            padding: 1.2rem 2.5rem;
            border-radius: 50px;
            text-decoration: none;
            font-size: 1.2rem;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255, 140, 66, 0.4);
            margin: 1rem auto;
        }

        .back-btn:hover {
            background: #e57a2f;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 140, 66, 0.6);
        }

        @media (max-width: 768px) {
            .robot-emoji { font-size: 5rem; }
            h1 { font-size: 2rem; }
            .status-text { font-size: 1.1rem; }
            .chat-prompt { padding: 1rem; font-size: 1rem; }
            .back-btn { padding: 1rem 2rem; font-size: 1rem; }
        }

        @media (max-width: 480px) {
            .robot-emoji { font-size: 4rem; }
            h1 { font-size: 1.5rem; }
            body { padding: 1rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="robot-emoji">ü§ñ</div>
        
        <h1>Lesson Compilation In Progress</h1>
        
        <p class="status-text">VQ Bot is still assembling this module...</p>
        
        <p class="robot-gibberish">
            STATUS: <span id="gibberish"></span>
        </p>

        <div class="chat-prompt">
            üí¨ While I'm working on this lesson, want to chat?
            <br><br>
            <strong>Ask me about:</strong>
            <br>‚Ä¢ What it's like to be a famous Hollywood robot
            <br>‚Ä¢ I want to have some fun üéµ
        </div>

        <a href="../../technical-christianity.html" class="back-btn">
            ‚Üê Back to Course Index
        </a>
    </div>

    <script>
        // Generate random robot gibberish
        const gibberishOptions = [
            "0x4C45535N-C0MP1L1NG",
            "BAYES_CALC.exe [37% loaded]",
            "01001100 01000101 01010011",
            "EPISTEMIC_SYMMETRY.dll loading...",
            "sudo apt-get install lesson_data",
            "MECHANISM_COUNT >> /dev/null",
            "import truth_frameworks as tf",
            "git commit -m 'still working on it'",
            "chmod +x compile_lesson.sh",
            "npm install @cai/resurrection-math",
            "while(lesson != complete) { compile(); }",
            "ERROR 418: I'm a teapot (jk, still compiling)"
        ];

        // Randomly select and display gibberish
        const randomGibberish = gibberishOptions[Math.floor(Math.random() * gibberishOptions.length)];
        document.getElementById('gibberish').textContent = randomGibberish;
    </script>

    <!-- VQ Chat Widget - Auto-open for this page -->
    <script src="../../vq-chat-widget.js"></script>
    <script>
        // Auto-open chat widget with better mobile support
        window.addEventListener('load', function() {
            // Wait for widget to fully load
            setTimeout(function() {
                // Try multiple methods to find and open the widget
                
                // Method 1: Direct function call
                if (typeof window.openVQChat === 'function') {
                    window.openVQChat();
                }
                
                // Method 2: Look for widget button and click it
                const widgetButton = document.querySelector(
                    '.vq-chat-button, #vq-chat-button, [class*="chat-button"], [id*="chat-button"]'
                );
                if (widgetButton && !document.querySelector('.vq-chat-open, [class*="chat-open"]')) {
                    widgetButton.click();
                }
                
                // Method 3: Check for iframe or widget container
                const widgetIframe = document.querySelector('iframe[src*="chat"], iframe[title*="chat"]');
                const widgetContainer = document.querySelector('.vq-chat-widget, #vq-chat-widget, [class*="chat-widget"]');
                
                // Force visibility on mobile
                if (window.innerWidth <= 768) {
                    if (widgetIframe) {
                        widgetIframe.style.display = 'block';
                        widgetIframe.style.position = 'fixed';
                        widgetIframe.style.bottom = '20px';
                        widgetIframe.style.left = '50%';
                        widgetIframe.style.transform = 'translateX(-50%)';
                        widgetIframe.style.zIndex = '9999';
                        widgetIframe.style.width = '90%';
                        widgetIframe.style.maxWidth = '400px';
                    }
                    
                    if (widgetContainer) {
                        widgetContainer.style.display = 'block';
                        widgetContainer.style.position = 'fixed';
                        widgetContainer.style.bottom = '20px';
                        widgetContainer.style.left = '50%';
                        widgetContainer.style.transform = 'translateX(-50%)';
                        widgetContainer.style.zIndex = '9999';
                        widgetContainer.style.width = '90%';
                        widgetContainer.style.maxWidth = '400px';
                    }
                    
                    // Also check for button on mobile
                    if (widgetButton) {
                        widgetButton.style.display = 'block';
                        widgetButton.style.position = 'fixed';
                        widgetButton.style.bottom = '20px';
                        widgetButton.style.left = '50%';
                        widgetButton.style.transform = 'translateX(-50%)';
                        widgetButton.style.zIndex = '9999';
                    }
                }
            }, 1500); // Increased delay to ensure widget loads
        });
    </script>
</body>
</html>
